#!/usr/bin/env bash
performance="throughput-performance"
balanced="balanced-battery"
powersaver="powersave"
selected_option=$(echo -e "$performance\n$balanced\n$powersaver" | wofi --dmenu -p "`tuned-adm active`")
if [ "$selected_option" == "$performance" ]
then
    tuned-adm profile $performance
elif [ "$selected_option" == "$balanced" ]
then
    tuned-adm profile $balanced
elif [ "$selected_option" == "$powersaver" ]
then
    tuned-adm profile $powersaver
else
    echo "No match"
fi

